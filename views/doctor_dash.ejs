<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
  </head>
  <body>
    <%- include('partials/header_user'); %>
<!-- Header -->
<header class="bg-dark py-5 mb-4">
    <div class="container">
      <h2 class="font-weight-bold text-white text-uppercase">Welcome Dr. </h2>
      <!--This is where the other info about the doctor will go.-->
    </div>
  </header>
  <section class="admin_section py-1">
    <div class="container">
      <div class="row">
        <!-- Patient Tier -->
        <div class="col-lg-6">
          <div class="card mb-5 mb-lg-0">
            <div class="card-body">
              <h5 class="card-title text-muted text-uppercase text-center">Patient Look Up</h5>
              <hr>
              <form class="container" action="/get_patient" method="POST">
                <h5 class="card-title text-muted text-uppercase">Search Patient</h5>
              <div class="form-group">
                  <input type="text" class="form-control" name="patient_id" placeholder="Patient ID *" value="" />
              </div>
              <div class="form-group">
                  <input type="submit" class="btn btn-block btn-primary bg-dark text-uppercase" value="Search" />
              </div>
              </form>
            </div>
          </div>
        </div>
        <!-- Category Tier -->
        <div class="col-lg-4">
            <div class="card">
              <div class="card-body py-5 mb-4">
                <h5 class="card-title text-muted text-uppercase text-center">Category</h5>
                <hr>
                <a href="create_category" class="btn btn-block btn-primary bg-dark text-uppercase">Create Category</a>
                  <hr>
                  <div class="dropdown show">
                      <a class="btn btn-block btn-primary bg-dark text-uppercase dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Search Category
                      </a>
                      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" href="#">Category 1</a>
                        <a class="dropdown-item" href="#">Category 2</a>
                        <a class="dropdown-item" href="#">Category 3</a>
                      </div>
                    </div> 
              </div>
            </div>
          </div>
        </div>
      </div>
  </section>
  <%- include('partials/footer'); %>
  </body>
  </html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
