<!doctype html>
<html lang="en">
<head>
    <%- include('partials/head'); %>
</head>
<body>

<!-- Header -->
<%- include('partials/header_user'); %>
<header class="bg-dark py-5 mb-4">
    <div class="container">
        <h2 class="font-weight-bold text-white text-uppercase">Create New Report</h2>
    </div>
</header>
<section class="admin_section py-1">
<div class="col login-form-2">
        <h3>Report Info</h3>
        <form action="/create_report" method="post">
            <div class="form-group">
                <input type="text" class="form-control" name="patient_id" id="patient_id" placeholder="Patient ID" value="" />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="user_id" id="user_id" placeholder="Doctor ID" value="" />
            </div>
            <div class="form-group">
                    <select id="category_id" name="category_id" class="form-control" required>
                        <option selected disabled>Choose ranking</option>
                        <% sql.forEach(function(category){  %> 
                            <option><%=category.category_id %></option>
                        <% })  %>
                    </select>
                </div>
            <div class="form-group">
                <input type="text" class="form-control" name="report_name" id="report_name" placeholder="Report Name" value="" />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="report_url" id="report_url" placeholder="Report URL" value="" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-block btn-dark text-uppercase" value="Create Report" />
            </div>
            <!-- <div class="form-group">
                <a href="/get_patient" class="btn btn-block text-uppercase btn-danger">Go Back</a>
            </div> -->
        </form>
    </div>
</section>
<%- include('partials/footer'); %>
</body>
</html>